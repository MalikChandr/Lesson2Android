<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@mipmap/bg">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnBarang"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="215dp"
                android:text="Lihat Barang"
                android:textColor="#fff"
                android:background="#3fcf18"
                android:onClick="onClickBarang"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnBarang"
                android:layout_marginTop="-200dp"
                android:layout_marginRight="10dp"
                android:layout_toStartOf="@+id/textView4"
                android:text="______" />

            <Button
                android:id="@+id/btnTroli"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="110dp"
                android:text="Lihat Troli"
                android:onClick="onClickTroli"
                android:background="#4989dc"
                android:textColor="#fff"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnBarang"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-195dp"
                android:text="ATAU" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnBarang"
                android:layout_marginTop="-200dp"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/textView4"
                android:text="______" />

            <TextView
                android:id="@+id/txtJudul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="73dp"
                android:text="BukaToko"
                android:textColor="#fff"
                android:textSize="40dp" />

        </RelativeLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>